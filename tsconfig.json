{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "allowJs": false,
        "jsx": "react",
        "removeComments": true,
        "noEmit": true,
        "importHelpers": true,
        "lib": [
            "ES2020",
            "dom"
        ],
        "isolatedModules": true,
        "strict": true,
        "rootDir": ".",
        "baseUrl": ".",
        "typeRoots": [
            "./@types",
            "./node_modules/@types"
        ],
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "./node_modules"
    ]
}